{
  "name": "3box",
  "version": "0.0.4",
  "description": "Interact with user data",
  "main": "lib/3box.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "test": "jest --coverage --runInBand --testURL=\"http://localhost\"",
    "build": "babel src --out-dir lib",
    "build:dist": "browserify -s ThreeBox ./src/3box.js -o ./dist/3box.js",
    "generate-readme": "cp readme-template.md README.md; ./node_modules/.bin/jsdoc2md src/*.js >> README.md"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "node_modules",
      "lib",
      "<rootDir>/src/__tests__/testUtils.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uport-project/3box-js.git"
  },
  "author": "uPort <team@uport.me>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/uport-project/3box-js/issues"
  },
  "homepage": "https://github.com/uport-project/3box-js#readme",
  "dependencies": {
    "bip39": "^2.5.0",
    "ipfs-api": "^24.0.0",
    "muport-core": "^0.4.1",
    "orbit-db": "^0.19.9",
    "store": "^2.0.12",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "ganache-cli": "^6.1.0",
    "ipfs": "^0.31.7",
    "ipfsd-ctl": "^0.39.1",
    "jest": "^22.4.2",
    "jsdoc-to-markdown": "^4.0.1"
  }
}
